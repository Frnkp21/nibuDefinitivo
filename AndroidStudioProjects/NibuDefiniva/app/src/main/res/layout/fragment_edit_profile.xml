<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D0328">

    <ImageButton
        android:id="@+id/patras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="@color/fui_transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/nibulogo"
        android:layout_width="86dp"
        android:layout_height="34dp"
        android:contentDescription="nibulogo"
        android:src="@drawable/nibulogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editEmail" />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Last Email or phone number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/nibulogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editEmail2"/>
    <EditText
        android:id="@+id/editEmail2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="New Email or phone number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editEmail3"/>
    <EditText
        android:id="@+id/editEmail3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Confirm Email or phone number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/editEmail2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editPass"/>


    <EditText
        android:id="@+id/editPass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Last Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/editEmail3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editPass2"/>
    <EditText
        android:id="@+id/editPass2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="New Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/editPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editPass3"/>
    <EditText
        android:id="@+id/editPass3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Confirm New Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/editPass2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirmar"/>

    <Button
        android:id="@+id/confirmar"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editPass3"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>